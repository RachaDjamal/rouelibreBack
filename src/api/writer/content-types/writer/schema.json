{
  "kind": "collectionType",
  "collectionName": "writers",
  "info": {
    "singularName": "writer",
    "pluralName": "writers",
    "displayName": "Writer"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "Bio": {
      "type": "text",
      "required": true
    },
    "Avatar": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "Name",
      "required": true
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "writer"
    }
  }
}
